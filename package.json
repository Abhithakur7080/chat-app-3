{
  "name": "chat-app",
  "version": "1.0.0",
  "description": "chat-app using socket.io handle the user can chat with another use in realtime",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "server": "nodemon -r dotenv/config --experimental-json-modules src/index.js",
    "client": "npm run dev --prefix ./client",
    "dev": "concurrently \"npm run server\" \"npm run client\""
  },
  "author": "Abhijeet",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.4",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.1.2",
    "socket.io": "^4.7.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.3",
    "prettier": "^3.2.5"
  }
}
